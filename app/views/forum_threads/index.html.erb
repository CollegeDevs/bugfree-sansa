<div class="container">
	<div class="col-md-10 ">
		<h1 class="text-center">Forum Threads</h1>
	</div>

	<div class="pull-right" style="margin-top: 25px">
		<%= search_form_for @q, html: {class: "form-inline"} do |f| %>
		<%= f.search_field :subject_or_forum_posts_body_cont,placeholder: 'Search ...' ,class:'form-control' %>
	<% end %>
	</div>
</div>

<div class="container">
<% @forum_threads.each do |forum_thread|%>

  <div class="row ">
    <h3 class="brand"><%=link_to forum_thread.subject, forum_thread %> </h3>
    <p class="text-muted pull-right">Created by <%= forum_thread.owner.email %></p>
  	<%= forum_thread.inspect %>
  </div>
<hr/>
<% end %>

<br>
</div>
<br>
<div class="pull-right">
  <%= link_to 'New Forum', new_forum_thread_path, class: 'button button-xs' %>
</div>


  
